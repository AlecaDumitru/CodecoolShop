<div>
    <ul>
        @foreach (Product prod in Model.products)
        {
            <li>
                <div class="card">
                    <div class="card-body" style="display: flex">
                        <div>
                            <img src="/img/@(prod.Name).jpg" style="height: 50%; width: 50%; align-self: center; padding-top: 10px">
                        </div>
                        <div>
                            <h5 class="card-title text-center">
                                Dummy
                            </h5>
                            <h5 class="card-title">@prod.Name</h5>
                            <p class="card-text">@prod.Description</p>
                            <p class="card-text">Category: @prod.ProductCategory.Department</p>
                            <p class="card-text">Supplier: @prod.Supplier.Name</p>
                            <p class="card-text">Quantity: @Model.order.products[prod.Id]</p>
                            <a asp-controller="Order" asp-action="RemoveFromCart"  asp-route-id="@prod.Id" type="button" class="btn btn-primary" style="float: bottom">-</a>
                            <a asp-controller="Order" asp-action="AddQuantity"  asp-route-id="@prod.Id" type="button" class="btn btn-primary" style="float: bottom">+</a>
                        </div>
                        <p class="card-text text-center"><strong>$@(@Model.order.products[prod.Id] * @prod.DefaultPrice)</strong></p>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
